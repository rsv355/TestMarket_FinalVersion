<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_menu_layout"
    android:layout_width="170dp"
    android:layout_height="220dp"
    android:gravity="center"
    android:tag="tag" >

    <ImageView
        android:id="@+id/popup_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quickaction_arrow_down" />

    <LinearLayout
        android:id="@+id/popup_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/popup_arrow"
        android:background="@drawable/quickaction_menu" >

        <ListView
            android:id="@+id/popup_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            android:listSelector="#BE2A3A"
            android:divider="@drawable/quickaction_menu_divider_grade"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            android:fastScrollEnabled="false"
            android:scrollbarFadeDuration="0"
            android:scrollbarStyle="insideOverlay"
            android:scrollingCache="true"
            android:smoothScrollbar="true" >
        </ListView>
    </LinearLayout>

</RelativeLayout>