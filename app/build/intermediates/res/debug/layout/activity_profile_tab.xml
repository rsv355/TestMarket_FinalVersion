<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/very_light_gray" >

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ProgressBar
                android:id="@+id/myprofiletap_progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:id="@+id/myprofile_nm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_gray" >

         <!--        <Button
                    android:id="@+id/logout_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/logout" />  -->
                
                <TextView
                    android:id="@+id/edit"
                    style="@style/customstylelable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="My Profile" />

                <Button
                    android:id="@+id/refresh_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/myprofile_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myprofile_nm"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/myprofile_layout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/product"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/myprofile_name_1"
                        style="@style/customstylelable"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/required_red"
                        android:clickable="false"
                        android:editable="true"
                        android:gravity="center"
                        android:text="UserName"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myprofile_layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/myprofile_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/myprofile_emailicon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/useremail" />

                            <EditText
                                android:id="@+id/myprofile_email1"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:clickable="false"
                                android:editable="true"
                                android:gravity="center_vertical"
                                android:text="emial"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/myprofile_regionicon1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/loc" />

                            <EditText
                                android:id="@+id/myprofile_region1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:clickable="false"
                                android:editable="true"
                                android:gravity="center_vertical"
                                android:text="region" />

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/myprofile_birthdateicon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/calendar" />

                            <EditText
                                android:id="@+id/myprofile_birthdate1"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:clickable="false"
                                android:editable="true"
                                android:gravity="center_vertical"
                                android:text="birth-date" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/myprofile_contacticon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/contact" />

                            <EditText
                                android:id="@+id/myprofile_contact1"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:clickable="false"
                                android:editable="true"
                                android:gravity="center_vertical"
                                android:inputType="phone"
                                android:text="contact" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/myprofile_gendericon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/gender" />

                            <EditText
                                android:id="@+id/myprofile_gender1"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:clickable="false"
                                android:editable="true"
                                android:gravity="center_vertical"
                                android:text="gender" />

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/done"
                style="@style/customstyleloggingbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/myprofile_layout"
                android:text="Done"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/D:/AndroidProjects/TestMarket_FinalVersion/app/src/main/res/layout/activity_profile_tab.xml -->